<%= stylesheet_link_tag "login", "data-turbo-track": "reload" %>
  <section class="sect">
      <div class="box">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="title">
              <h1>Login Page</h1>
          </div>
          <div class="inputs">
              <div class="email">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
              </div>
              <div class="pass mtop">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
              </div>
              <div class="rem mtop">
                  <div class="checkbox-wrapper-30">
                      <span class="checkbox">
                        <input type="checkbox" />
                        <%= f.check_box :remember_me%>
                        <svg>
                            <use xlink:href="#checkbox-30" class="checkbox"></use>
                          </svg>
                      </span>
                      <%= f.label :remember_me, "Remember Me"%>
                      <svg xmlns="http://www.w3.org/2000/svg" style="display:none">
                          <symbol id="checkbox-30" viewBox="0 0 22 22">
                              <path fill="none" stroke="#fff" d="M5.5,11.3L9,14.8L20.2,3.3l0,0c-0.5-1-1.5-1.8-2.7-1.8h-13c-1.7,0-3,1.3-3,3v13c0,1.7,1.3,3,3,3h13 c1.7,0,3-1.3,3-3v-13c0-0.4-0.1-0.8-0.3-1.2"/>
                          </symbol>
                      </svg>
                  </div>
              </div>
              <div class="btn mtop">
                  <%= f.submit "Log in" %>
              </div>
          <% end %>
                <div class="btn mtop">
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= button_to "Sign up", new_registration_path(resource_name), method: :get %>
                  <% end %>
                </div>
                <div class="forgot mtop">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                    <% end %>
                </div>
            </div>
        </div>
    </section>